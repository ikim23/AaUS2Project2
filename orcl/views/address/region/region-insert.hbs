<div class="row">
  <div class="col-md-10 offset-md-1">
    <div class="row">
      <div class="col">
        <h2>Nový región</h2>
      </div>
    </div>
    <form action="/add/region" method="POST">
      <div class="form-group row required">
        <label for="countryId" class="col-3 col-form-label">Kód krajiny</label>
        <div class="col-9">
          <select class="form-control" name="countryId">
            {{#each countries}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group row required">
        <label for="regionId" class="col-3 col-form-label">Kód regiónu</label>
        <div class="col-9">
          <input class="form-control{{#if invalid.regionId}} is-invalid{{/if}}" type="text" value="{{region.regionId}}" name="regionId">
        </div>
      </div>
      <div class="form-group row required">
        <label for="name" class="col-3 col-form-label">Názov</label>
        <div class="col-9">
          <input class="form-control{{#if invalid.name}} is-invalid{{/if}}" type="text" value="{{region.name}}" name="name">
        </div>
      </div>

      <button type="submit" class="btn btn-primary pull-right">Uložiť</button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-10 offset-md-1">
    <div class="row">
      <div class="col">
        <h2>Biometrické údaje</h2>
      </div>
    </div>
    <form action="/{{action}}/bm-data/{{data.personalNumber}}" method="POST" encType="multipart/form-data">
      <input type="hidden" value="{{data.personalNumber}}" name="personalNumber">
      <div class="form-group row">
        <label for="height" class="col-3 col-form-label">Výška [cm]</label>
        <div class="col-9">
          <input class="form-control{{#if invalid.height}} is-invalid{{/if}}" type="text" value="{{data.height}}" name="height">
        </div>
      </div>
      <div class="form-group row">
        <label for="weight" class="col-3 col-form-label">Váha [kg]</label>
        <div class="col-9">
          <input class="form-control{{#if invalid.weight}} is-invalid{{/if}}" type="text" value="{{data.weight}}" name="weight">
        </div>
      </div>
      <div class="form-group row">
        <label for="skinColor" class="col-3 col-form-label">Farba pleti</label>
        <div class="col-9">
          <div id="skinColor" class="input-group colorpicker-component">
            <input class="form-control{{#if invalid.skinColor}} is-invalid{{/if}}" type="text" value="{{data.skinColor}}" name="skinColor">
            <span class="input-group-addon">
              <i></i>
            </span>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label for="hairColor" class="col-3 col-form-label">Farba vlasov</label>
        <div class="col-9">
          <div id="hairColor" class="input-group colorpicker-component">
            <input class="form-control{{#if invalid.hairColor}} is-invalid{{/if}}" type="text" value="{{data.hairColor}}" name="hairColor">
            <span class="input-group-addon">
              <i></i>
            </span>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label for="eyeColor" class="col-3 col-form-label">Farba očí</label>
        <div class="col-9">
          <div id="eyeColor" class="input-group colorpicker-component">
            <input class="form-control{{#if invalid.eyeColor}} is-invalid{{/if}}" type="text" value="{{data.eyeColor}}" name="eyeColor">
            <span class="input-group-addon">
              <i></i>
            </span>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label for="photo" class="col-3 col-form-label">Fotka</label>
        <div class="col-9">
          <input class="form-control" type="file" name="photo">
        </div>
      </div>
      <div class="form-group row">
        <label for="fingerprint" class="col-3 col-form-label">Odtlačok prsta</label>
        <div class="col-9">
          <input class="form-control" type="file" name="fingerprint">
        </div>
      </div>

      <button type="submit" class="btn btn-primary pull-right">Uložiť</button>
    </form>
  </div>
</div>
<script defer="defer">
  window.addEventListener('DOMContentLoaded', function () {
    (function ($) {
      $(document).ready(function () {
        $('#skinColor').colorpicker();
        $('#hairColor').colorpicker();
        $('#eyeColor').colorpicker();
      });
    })(jQuery);
  });
</script>

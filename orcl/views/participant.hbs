<div class="row">
  <div class="col-md-10 offset-md-1">
    <div class="row">
      <div class="col-9">
        <h2>Ucastnik cinu</h2>
      </div>
      <div class="col-3">
        <div class="pull-right">
          <a href="/edit/participant/{{participant.personalNumber}}.{{participant.crimeId}}.{{participant.type}}.{{participant.fromDate}}" class="btn btn-primary">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
          <form action="/delete/participant/{{participant.personalNumber}}.{{participant.crimeId}}.{{participant.type}}.{{participant.fromDate}}" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">
              <i class="fa fa-times" aria-hidden="true"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th scope="row">Meno</th>
          <td>{{participant.name}}</td>
        </tr>
        <tr>
          <th scope="row">Priezvisko</th>
          <td>{{participant.surname}}</td>
        </tr>
        <tr>
          <th scope="row">Mesto</th>
          <td>{{participant.city}}</td>
        </tr>
        <tr>
          <th scope="row">Ulica</th>
          <td>{{participant.street}}</td>
        </tr>
        <tr>
          <th scope="row">PSC</th>
          <td>{{participant.cityCode}}</td>
        </tr>
        <tr>
          <th scope="row">Typ</th>
          <td>{{participant.type}}</td>
        </tr>
        <tr>
          <th scope="row">Od</th>
          <td>{{participant.fromDate}}</td>
        </tr>
        <tr>
          <th scope="row">Do</th>
          <td>{{participant.toDate}}</td>
        </tr>
        <tr>
          <th scope="row">Subor so svedectvom</th>
          <td>{{participant.witness}}</td>
        </tr>
        <tr>
          <th scope="row">Subor s dovodom</th>
          <td>{{participant.reason}}</td>
        </tr>
        <tr>
          <th scope="row">Datum nastupu</th>
          <td>{{participant.date}}</td>
        </tr>
        <tr>
          <th scope="row">Dlazka trestu</th>
          <td>{{participant.punishmentLength}}</td>
        </tr>
        <tr>
          <th scope="row">Miesto vykonu trestu</th>
          <td>{{participant.punishmentPlace}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
